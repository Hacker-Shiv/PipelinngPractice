pipeline {
         agent any
         stages {
                 stage('One') {
                    steps {
                      echo 'Hi, I am Prithvi Raj Karki from Chandigarh University'
                    }
                 }
                 stage('Two') {
                    steps {
                      input('Do you want to proceed?')
                    }
                 }
                 stage('Three') {
                    when {
                       not {
                            branch "master"
                       }
                    }
                    steps {
                       echo "Hello"
                       echo "We are in stage three's steps"
                       git 'https://github.com/prithvi8117/PipelinngPractice'
                    }
                 }
                 stage('Four : Compile'){
                     tools {
                        gradle 'gradle4'
                     }
                     steps {
                        sh 'gradle clean compileJava test1'
                     }
                 }
                 stage('Five') {
                    parallel { 
                            stage('Unit Test') {
                              steps {
                                echo "Running the unit test..."
                              }
                            }
                            stage('Integration test') {
                              steps {
                                echo "Running the integration test..."
                              }
                            }
                    }
                }
          }
}
